{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "pekral/pekral",
    "type": "project",
    "description": "Personal website",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "laravel/framework": "^12.50.0",
        "laravel/tinker": "^2.11.0",
        "livewire/flux": "^2.12.0",
        "livewire/volt": "^1.10.2",
        "spatie/laravel-cookie-consent": "^3.3.3"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24.1",
        "larastan/larastan": "^3.9",
        "laravel/boost": "^1.8.10",
        "laravel/pail": "^1.2.5",
        "laravel/pint": "^1.27.0",
        "laravel/sail": "^1.52",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.3",
        "pekral/cursor-rules": "^0.5.1",
        "pekral/phpcs-rules": "^0.4.6",
        "pekral/rector-rules": "^0.4.7",
        "pestphp/pest": "^4.3.2",
        "phpstan/phpstan": "^2.1.38",
        "phpstan/phpstan-deprecation-rules": "^2.0.3",
        "phpstan/phpstan-mockery": "^2.0",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
      "analyse": "vendor/bin/phpstan analyse --memory-limit=4G",
      "build": "vendor/bin/cursor-rules install --force && composer fix && composer check",
      "check": "composer run phpcs-check && composer run pint-check && composer run rector-check && composer run analyse && composer run security-audit && composer run test:coverage",
      "fix": "composer run rector-fix && composer run pint-fix && composer run phpcs-fix || true",
      "phpcs-check": "vendor/bin/phpcs --standard=ruleset.xml app/ tests/",
      "phpcs-fix": "vendor/bin/phpcbf --standard=ruleset.xml app/ tests/ || true",
      "pint-check": "vendor/bin/pint app/ tests/ --test --parallel",
      "pint-fix": "vendor/bin/pint app/ tests/ --parallel",
      "rector-check": "vendor/bin/rector process --dry-run",
      "rector-fix": "vendor/bin/rector process",
      "security-audit": "composer audit",
      "test:coverage": "php -dpcov.enabled=1 -dpcov.directory=. -dxdebug.mode=off -dpcov.exclude=\"~vendor~\" vendor/bin/pest --coverage --min=100"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
