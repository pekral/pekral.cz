{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "pekral/pekral",
    "type": "project",
    "description": "Personal website",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "laravel/framework": "^12.48.1",
        "laravel/tinker": "^2.11.0",
        "livewire/flux": "^2.11.1",
        "livewire/volt": "^1.10.1",
        "spatie/laravel-cookie-consent": "^3.3.3"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24.1",
        "larastan/larastan": "^3.9",
        "laravel/boost": "^1.8.10",
        "laravel/pail": "^1.2.4",
        "laravel/pint": "^1.27.0",
        "laravel/sail": "^1.52",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.3",
        "pekral/cursor-rules": "dev-master",
        "pekral/phpcs-rules": "dev-master",
        "pekral/rector-rules": "dev-master",
        "pestphp/pest": "^4.3.1",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-mockery": "^2.0",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ],
        "analyse": [
            "echo \"üîç Running PHPStan static analysis...\"",
            "vendor/bin/phpstan analyse --memory-limit=2G"
        ],
        "check": [
            "echo \"üöÄ Running full quality check...\"",
            "@phpcs-check",
            "@pint-check",
            "@rector-check",
            "@analyse",
            "@security-audit",
            "@test:coverage"
        ],
        "fix": [
            "echo \"üîß Running all fixes...\"",
            "@rector-fix",
            "@phpcs-fix",
            "@pint-fix",
            "echo \"‚úÖ All fixes completed!\""
        ],
        "phpcs-check": [
            "echo \"‚úÖ Running PHP CodeSniffer check...\"",
            "vendor/bin/phpcs --standard=ruleset.xml app/ tests/"
        ],
        "phpcs-fix": [
            "echo \"üîß Running PHP CodeSniffer fix...\"",
            "vendor/bin/phpcbf --standard=ruleset.xml app/ tests/ || true"
        ],
        "pint-check": [
            "echo \"üé® Running Laravel Pint check...\"",
            "vendor/bin/pint app/ tests/ --test"
        ],
        "pint-fix": [
            "echo \"üé® Running Laravel Pint fixes...\"",
            "vendor/bin/pint app/ tests/"
        ],
        "rector-check": [
            "echo \"üîÑ Running Rector check (dry-run)...\"",
            "vendor/bin/rector process --dry-run"
        ],
        "rector-fix": [
            "echo \"üîÑ Running Rector fixes...\"",
            "vendor/bin/rector process"
        ],
        "security-audit": [
            "echo \"üîí Running Composer security audit...\"",
            "composer audit --format=summary"
        ],
        "test:coverage": [
            "echo \"üìä Running coverage tests...\"",
            "php -dpcov.enabled=1 -dpcov.directory=. -dxdebug.mode=off vendor/bin/pest --coverage"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
